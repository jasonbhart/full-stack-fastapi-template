# ============================================================================
# Development Environment Configuration Template
# ============================================================================
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp .env.local.example .env.local
# 2. Set APP_ENV=local in your .env file (or use default)
# 3. Edit .env.local with your actual API keys and local settings
# 4. .env.local is git-ignored to protect your secrets
#
# This file contains development-specific overrides for the base .env file.
# When APP_ENV=local, settings from .env.local override values from .env
#
# Development priorities:
# - Easy setup with minimal external dependencies
# - Verbose logging and tracing for debugging
# - Relaxed security for local development
# - Mock/disabled services where possible
# ============================================================================

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================

# Development environment identifier
ENVIRONMENT=local
APP_ENV=local

# Project identification
PROJECT_NAME="Full Stack FastAPI Project - Dev"
STACK_NAME=full-stack-fastapi-project-dev

# Local development domain
DOMAIN=localhost

# Frontend runs on Vite dev server
FRONTEND_HOST=http://localhost:5173

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Allow all local origins for development convenience
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,http://localhost:8000,https://localhost,https://localhost:5173"

# Simple secret for development (NEVER use in production)
SECRET_KEY=dev_secret_key_change_in_production_12345678

# Development admin account
FIRST_SUPERUSER=dev@example.com
FIRST_SUPERUSER_PASSWORD=devpassword123

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email disabled in development (emails will be logged instead of sent)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=dev@example.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Local PostgreSQL (Docker Compose provides this)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=appappappapp

# ============================================================================
# LLM & AGENT CONFIGURATION
# ============================================================================

# LangChain tracing disabled in development (enable if needed for debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=fastapi-dev

# Default to GPT-3.5 for faster, cheaper development
# Switch to GPT-4 when needed: LLM_MODEL_NAME=gpt-4
LLM_MODEL_NAME=gpt-3.5-turbo
LLM_MODEL_PROVIDER=openai

# Higher temperature for more varied outputs during testing
LLM_TEMPERATURE=0.7

# Smaller token limit for faster responses
LLM_MAX_TOKENS=1024

# API Keys - Add your keys here or keep in base .env
# Development: You can use the same keys as base .env
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# ============================================================================
# OBSERVABILITY & TRACING
# ============================================================================

# Langfuse disabled by default in development
# Enable if you want to test observability features
LANGFUSE_ENABLED=false
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Trace all requests in development for better debugging
LANGFUSE_SAMPLE_RATE=1.0

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limiting disabled in development for easier testing
# Enable if you want to test rate limiting behavior
RATE_LIMIT_ENABLED=false

# Generous limits for development
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# Redis provided by Docker Compose
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry disabled in development
SENTRY_DSN=

# ============================================================================
# FRONTEND FEATURE FLAGS
# ============================================================================

# Agent/AI Assistant Feature
# Enable in development to test agent features
# Default: false (disabled for faster startup)
VITE_ENABLE_AGENT=false

# ============================================================================
# INFRASTRUCTURE SERVICES
# ============================================================================

# Langfuse Database Password (local development)
LANGFUSE_DB_PASSWORD=langfuse

# Grafana Admin Credentials (local development only - safe on localhost)
# These defaults are acceptable for local development
# NEVER use these in production environments
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Local Docker images (no registry needed)
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend
